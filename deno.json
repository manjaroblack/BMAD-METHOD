{
  "version": "5.0.0",
  "name": "bmad-method",
  "exports": "./mod.ts",
  "tasks": {
    // A primary task to run the main CLI application.
    // All commands like 'install' and 'flatten' will be subcommands of this.
    "start": "deno run --allow-read --allow-write --allow-env --allow-run mod.ts",

    // Command-specific tasks now use the main entry point.
    "install": "deno task start install",
    "flatten": "deno task start flatten",
    "test": "deno test --allow-read --allow-write --allow-env",
    "release": "semantic-release",
    "version:patch": "deno run --allow-read --allow-write --allow-env --allow-run src/version-management/version-bump.ts patch",
    "version:minor": "deno run --allow-read --allow-write --allow-env --allow-run src/version-management/version-bump.ts minor",
    "version:major": "deno run --allow-read --allow-write --allow-env --allow-run src/version-management/version-bump.ts major",
    "version:expansion": "deno run --allow-read --allow-write --allow-env --allow-run src/version-management/bump-expansion-version.ts",
    "version:expansion:set": "deno run --allow-read --allow-write --allow-env --allow-run src/version-management/update-expansion-version.ts",
    "version:all": "deno run --allow-read --allow-write --allow-env --allow-run src/version-management/bump-all-versions.ts"
  },
  "imports": {
    "deps": "./deps.ts"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true
  }
}
