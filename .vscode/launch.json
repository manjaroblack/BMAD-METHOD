  "version": "0.2.0",
  "configurations": [
    {
      "name": "üöÄ Debug BMAD CLI (Deno)",
      "type": "node",
      "request": "launch",
      "program": "deno",
      "args": [
        "run",
        "--allow-read",
        "--allow-write",
        "--allow-env",
        "--inspect-brk",
        "${workspaceFolder}/tooling/cli/cli.ts",
        "build"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "DENO_ENV": "development"
      },
      "console": "integratedTerminal",
      "restart": true
    },
    {
      "name": "üîß Debug Current File (Deno)",
      "type": "node",
      "request": "launch",
      "program": "deno",
      "args": [
        "run",
        "--allow-read",
        "--allow-write",
        "--allow-env",
        "--inspect-brk",
        "${file}"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "DENO_ENV": "development"
      },
      "console": "integratedTerminal",
      "restart": true
    },
    {
      "name": "üèóÔ∏è Debug Web Builder (Deno)",
