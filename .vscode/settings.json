{
  "deno.enable": true,
  "deno.config": "deno.jsonc",
  "deno.lint": true,
  // Use Deno for TS/JS validation in this workspace
  "typescript.validate.enable": false,
  // Prefer Deno formatter
  "editor.defaultFormatter": "denoland.vscode-deno",
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[javascript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  }
}
