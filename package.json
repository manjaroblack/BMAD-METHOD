{
	"name": "bmad-method",
	"version": "4.32.0",
	"description": "Breakthrough Method of Agile AI-driven Development",
	"type": "module",
	"main": "tooling/cli/cli.js",
  "bin": {
    "bmad": "tooling/cli/bmad-npx-wrapper.js",
    "bmad-method": "tooling/cli/bmad-npx-wrapper.js"
  },
	"scripts": {
		"build": "node tooling/cli/cli.js build",
    "build:agents": "node tooling/cli/cli.js build --agents-only",
    "build:teams": "node tooling/cli/cli.js build --teams-only",
    "list:agents": "node tooling/cli/cli.js list:agents",
    "list:teams": "node tooling/cli/cli.js list:teams",
    "validate": "node tooling/cli/cli.js validate",
    "flatten": "node tooling/development-tools/flattener/main.js",
    "install:bmad": "node tooling/installers/bin/bmad.js install",
		"format": "prettier --write \"**/*.md\"",
		"version:patch": "node tooling/version-management/version-bump.js patch",
    "version:minor": "node tooling/version-management/version-bump.js minor",
    "version:major": "node tooling/version-management/version-bump.js major",
    "version:expansion": "node tooling/version-management/bump-expansion-version.js",
    "version:expansion:set": "node tooling/version-management/update-expansion-version.js",
    "version:all": "node tooling/version-management/bump-all-versions.js",
    "version:all:minor": "node tooling/version-management/bump-all-versions.js minor",
    "version:all:major": "node tooling/version-management/bump-all-versions.js major",
    "version:all:patch": "node tooling/version-management/bump-all-versions.js patch",
    "version:expansion:all": "node tooling/version-management/bump-all-versions.js",
    "version:expansion:all:minor": "node tooling/version-management/bump-all-versions.js minor",
    "version:expansion:all:major": "node tooling/version-management/bump-all-versions.js major",
    "version:expansion:all:patch": "node tooling/version-management/bump-all-versions.js patch",
		"release": "semantic-release",
		"release:test": "semantic-release --dry-run --no-ci || echo 'Config test complete - authentication errors are expected locally'",
		"prepare": "husky"
	},
	"dependencies": {
		"@kayvan/markdown-tree-parser": "^1.6.0",
		"bmad-method": "^5.0.0",
		"chalk": "^5.4.1",
		"commander": "^14.0.0",
		"fs-extra": "^11.3.0",
		"glob": "^11.0.3",
		"inquirer": "^12.8.2",
		"js-yaml": "^4.1.0",
		"minimatch": "^10.0.3",
		"ora": "^8.2.0"
	},
	"keywords": [
		"agile",
		"ai",
		"orchestrator",
		"development",
		"methodology",
		"agents",
		"bmad"
	],
	"author": "Brian (BMad) Madison",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bmadcode/BMAD-METHOD.git"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"devDependencies": {
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"husky": "^9.1.7",
		"jest": "^30.0.5",
		"lint-staged": "^16.1.2",
		"prettier": "^3.6.2",
		"semantic-release": "^24.2.7",
		"yaml-lint": "^1.7.0"
	},
	"lint-staged": {
		"**/*.md": [
			"prettier --write"
		]
	}
}
